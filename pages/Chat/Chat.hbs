<div class="chatList">
    <div class="header">
        <div class="settings">
            <div id="userAvatar" class="avatar"></div>
            <a href="../settings">Settings</a>
            <button id="addChat">+</button>
        </div>
        <input type="text" placeholder="Find chat">
    </div>
    <div id="chat-list">
    </div>
</div>
<div class="chatContent">
    <div class="header">
        <div class="avatar"></div>
        <h2 class="usernameTitle">Chat Title</h2>
        <div id="contextOpener" class="settingsOfChat">
        </div>
        <div id="contextMenu" class="hidden">
            <a id="addUser">Add user</a>
            <a id="removeUser">Remove user</a>
            <a id="deleteChat">Delete chat</a>
            <form id="fileForm">
                <a id="chatImageLink" for="file">Set chat image</a>
                <input id="file" type="file" hidden/>
            </form>
        </div>
    </div>
    <div id="message-block" class="messages">
    </div>
    <div class="footer">
        <div class="message-form">
            <input id="message-input" class="message-input" placeholder="Message">
            <div id="sendMsgBtn" class="sendBtn">
